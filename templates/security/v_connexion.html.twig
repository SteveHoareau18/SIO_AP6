
{% include 'v_entete.html.twig' %}

{% block body %}
<div id="contenu">
{% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


      <h2>Identification utilisateur</h2>


<form method="POST">
    
			<p>
       <label for="nom">Login*</label>
       <input id="login" type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" autocomplete="username" required autofocus size="30" maxlength="45">
      </p>
			<p>
				<label for="mdp">Mot de passe*</label>
			  <input id="mdp"  type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required size="30" maxlength="45">
      </p>
         <input type="submit" value="Valider" name="valider">
         <input type="reset" value="Annuler" name="annuler"> 
          <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
      </p>
</form>

</div>
{% endblock %}
